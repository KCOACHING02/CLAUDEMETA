  <script>
    // R√©cup√©ration des param√®tres URL
    const params = new URLSearchParams(window.location.search);
    const bmr = parseInt(params.get('bmr'));
    const tdee = parseInt(params.get('tdee'));
    const weight = parseFloat(params.get('weight'));
    const height = parseFloat(params.get('height'));

    // Redirection si param√®tres manquants
    if (isNaN(bmr) || isNaN(tdee) || isNaN(weight) || isNaN(height)) {
      window.location.href = 'index.html';
    }

    // Affichage des r√©sultats
    document.getElementById('bmr-result').textContent = bmr;
    document.getElementById('tdee-result').textContent = tdee;

    // Calcul IMC
    const imc = weight / Math.pow(height / 100, 2);
    document.getElementById('imc-result').textContent = imc.toFixed(1);

    // Cat√©gorie IMC
    function getIMCCategory(imc) {
      if (imc < 18.5) return 'Maigreur';
      if (imc < 25) return 'Normal';
      if (imc < 30) return 'Surpoids';
      return 'Ob√©sit√©';
    }
    document.getElementById('imc-category').textContent = getIMCCategory(imc);

    // Calcul de la perte estim√©e avec La M√©thode K
    // Semaine 1 (7j) : 1300 cal
    // Jours 8-21 (14j) : 1400 cal
    // Jours 22-49 (28j) : 1500 cal
    function calculateWeightLoss(tdee) {
      const week1Deficit = (tdee - 1300) * 7;  // 7 jours √† 1300 cal
      const week2_3Deficit = (tdee - 1400) * 14; // 14 jours √† 1400 cal
      const week4_7Deficit = (tdee - 1500) * 28; // 28 jours √† 1500 cal
      
      const totalDeficit = week1Deficit + week2_3Deficit + week4_7Deficit;
      
      // 1 kg de graisse = environ 7700 calories
      const estimatedLoss = totalDeficit / 7700;
      
      // On arrondit et on s'assure d'avoir un r√©sultat positif
      return Math.max(0, estimatedLoss).toFixed(1);
    }

    const weightLoss = calculateWeightLoss(tdee);
    document.getElementById('estimated-loss').textContent = weightLoss;
  </script>
